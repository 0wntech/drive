{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": "google",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "max-len": [1, 100, 4],
        "linebreak-style": 0,
        "indent": 0,
        "require-jsdoc": 0,
        "react/jsx-uses-vars": 1,
        "react/jsx-uses-react": 1,
        "object-curly-spacing": ["error", "always"],
        "quote-props": "warn"
    }
}
